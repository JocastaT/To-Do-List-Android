<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#484848</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="LoginTheme" parent="Theme.MaterialComponents.Light.NoActionBar" />
    <style name="AppTheme.AppBarOverlay" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" ></style>


    <style name="AppTheme.TitleText" >
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="AppTheme.SubTitleText">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.TitleText.Dark" parent="AppTheme.TitleText">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.SubTitleText.Dark" parent="AppTheme.SubTitleText" >
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="createEventToolbarItems">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="createEventItemTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">6.5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="createEventIconStyle">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginTop">15.5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginStart">8.5dp</item>
        <item name="android:layout_marginEnd">8.5dp</item>
        <!--<item name="android:layout_margin">8.5dp</item>-->
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:contentDescription">Not Available</item>
    </style>

    <style name="createEventSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#ddd</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
    </style>

    <style name="weekdayTextView">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="AppTheme">styles</style>

    <dimen name="calendar_circle_height">4dp</dimen>
    <dimen name="fab_margin">16dp</dimen>
    <dimen name="calendar_date_textview_width" >35dp</dimen>
    <dimen name="calendar_image_view_margin_top" >4dp</dimen>
    <dimen name="calendar_date_textsize">15sp</dimen>

    <dimen name="datepicker_view_animator_height">50dp</dimen>
    <dimen name="datepicker_year_label_height">50dp</dimen>

    <dimen name="calendar_row_height">45dp</dimen></resources>